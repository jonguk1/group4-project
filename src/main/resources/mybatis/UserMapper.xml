<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lend.shareservice.domain.user.UserMapper">

    <insert id="saveUser" parameterType="com.lend.shareservice.domain.user.vo.UserVo">
        INSERT INTO user
        (user_id, name, phone_number, pw, address)
        VALUES(#{user_id},#{pw},#{name},#{phone_number},#{address});
    </insert>

    <select id="userList" resultType="string">
        select name from user;
    </select>

    <select id="getUserId" resultType="String" parameterType="String">
        select userId from user
        <where>
            userId=#{value}
        </where>
    </select>
</mapper>